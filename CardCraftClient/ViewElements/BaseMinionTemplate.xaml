<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CardCraftClient.ViewElements.BaseMinionTemplate">
    
    <ContentView.Content>
        <Border
            StrokeThickness="0">
            <Grid
                BackgroundColor="{Binding Color}"
                WidthRequest="200"
                HeightRequest="300"
                Padding="10"
                >
                <Grid.RowDefinitions>
                    <RowDefinition Height="150" />
                    <RowDefinition Height="30" />
                    <RowDefinition Height="70" />
                    <RowDefinition Height="40" />
                </Grid.RowDefinitions>

                <Image
                    Grid.Row="0"
                    Source="{Binding Image}"
                    Aspect="AspectFill"
                    HeightRequest="150" 
                    WidthRequest="180"
                />

                <Grid
                    ColumnDefinitions="40"
                    Grid.Row="0">

                    <Image
                        Source="manacost2.png"
                        WidthRequest="40"
                        HeightRequest="40"
                        VerticalOptions="Start"
                    >
                        <Image.Shadow>
                            <Shadow Brush="Black"
                                    Offset="0, 0"
                                    Radius="10"
                                    Opacity="1" />
                        </Image.Shadow>
                    </Image>

                    <Label
                        Text="{Binding ManaCost}"
                        TextColor="{StaticResource White}"
                        Padding="5"
                        FontFamily="CutOutsFLF"
                        FontAttributes="Bold"
                        FontSize="23"
                        HorizontalOptions="Center"
                        VerticalOptions="Start"
                    >
                        <Label.Shadow>
                            <Shadow Brush="White"
                                    Offset="5, 5"
                                    Radius="100"
                                    Opacity="1" />
                        </Label.Shadow>
                    </Label>
                </Grid>

                <Label
                    Grid.Row="1"
                    Text="{Binding Name}"
                    FontSize="20"
                    FontFamily="CutOutsFLF"
                    TextColor="{Binding TextColor}"
                    HorizontalOptions="Center" 
                    VerticalOptions="Center"
                />
                
                <Border
                    Grid.Row="2"
                    Padding="5"
                    StrokeThickness="2"
                    Stroke="{Binding TextColor}"
                    StrokeShape="RoundRectangle 10,10,10,10"
                    >
                    <Label
                        Text="{Binding Description}"
                        FontSize="13"
                        TextColor="{Binding TextColor}" 
                        LineBreakMode="WordWrap"
                        LineHeight="1.5"
                    />
                </Border>

                <Grid
                    x:Name="Stats"
                    Grid.Row="3"
                    ColumnDefinitions="40, *, 40"
                    >
                    <Image
                        Grid.Column="0"
                        Source="attack.png"
                        HorizontalOptions="Center"
                        VerticalOptions="Center"
                        WidthRequest="30"
                        HeightRequest="30"
                        Margin="0,0,0,6"
                    >
                        <Image.Shadow>
                            <Shadow Brush="Black"
                                    Offset="0, 0"
                                    Radius="10"
                                    Opacity="1" />
                        </Image.Shadow>
                    </Image>

                    <Label
                        Grid.Column="0"
                        Text="{Binding Attack}"
                        TextColor="{StaticResource White}"
                        FontFamily="CutOutsFLF"
                        FontAttributes="Bold"
                        FontSize="13"
                        HorizontalOptions="Center"
                        VerticalOptions="Center"
                    />

                    <Image
                        Grid.Column="2"
                        Source="hearth.png" 
                        HorizontalOptions="Center"
                        VerticalOptions="Center"
                        WidthRequest="30"
                        HeightRequest="30"
                    >
                        <Image.Shadow>
                            <Shadow Brush="Black"
                                    Offset="0, 0"
                                    Radius="10"
                                    Opacity="1" />
                        </Image.Shadow>
                    </Image>

                    <Label
                        Grid.Column="2"
                        Text="{Binding Health}"
                        TextColor="{StaticResource White}"
                        FontFamily="CutOutsFLF"
                        FontSize="13"
                        FontAttributes="Bold"
                        HorizontalOptions="Center"
                        VerticalOptions="Center"
                    />
                </Grid>
            </Grid>
        </Border>
    </ContentView.Content>

</ContentView>