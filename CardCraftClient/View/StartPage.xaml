<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CardCraftClient.View.StartPage"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:viewmodel="clr-namespace:CardCraftClient.ViewModel"
             x:DataType="viewmodel:StartPageViewModel"
             Title="{Binding Title}"
             BackgroundColor="#cab070">

    <Grid VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">

        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Image Grid.Row="0" Source="..\Resources\Images\sword.png" HorizontalOptions="Center" VerticalOptions="Center" HeightRequest="256" WidthRequest="256" Margin="0,-200,0,0" />
        <Entry Grid.Row="1" Placeholder="Insert your username" HorizontalOptions="Center" VerticalOptions="Start" Margin="0,100,0,0" />
        <Button Grid.Row="2" Text="Click Me" HorizontalOptions="Center" BackgroundColor="#463C2D" TextColor="WhiteSmoke" Margin="0,20,0,0" />

    </Grid>

</ContentPage>