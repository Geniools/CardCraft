<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="CardCraftClient.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:CardCraftClient"
    xmlns:view="clr-namespace:CardCraftClient.View"
    Shell.FlyoutBehavior="Disabled"
    Shell.NavBarIsVisible="False"
    Shell.BackgroundColor="Transparent"
    Shell.ForegroundColor="Transparent"
    Shell.TitleColor="Transparent"
    DisabledColor="Transparent"
    UnselectedColor="Transparent"
    NavigationPage.HasBackButton="False"
    Title="Card Craft">

    <ShellContent
        Title="StartPage"
        ContentTemplate="{DataTemplate view:StartPage}"
        Route="StartPage"
        />

</Shell>
